<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payy"
    tools:context=".MainActivity2">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/payments"
        android:layout_marginStart="8dp"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/delLogo"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/delLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esay"
            android:textSize="42dp"
            android:textColor="#9C27B0"
            android:id="@+id/tvFresh"
            android:layout_marginStart="40dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:id="@+id/tvEveryThing"
            android:layout_marginStart="40dp"

            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Both creddit card and cash on delivery are available for your easy "
            android:textSize="18dp"
            android:textColor="#9C27B0"
            android:id="@+id/tvInfo"
            android:layout_marginStart="40dp"

            />



    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>